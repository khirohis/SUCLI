<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_recent" />

    <Spinner
        android:id="@+id/spinner_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_command" />

    <EditText
        android:id="@+id/edit_command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_execute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:onClick="onExecuteClick"
        android:text="@string/button_execute" />

    <CheckBox
        android:id="@+id/check_sudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_sudo" />

    <ScrollView
        android:id="@+id/text_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	    <TextView
        	android:id="@+id/text_output"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
    </ScrollView>


</LinearLayout>